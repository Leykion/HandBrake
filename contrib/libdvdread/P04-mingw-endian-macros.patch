@@ -83,6 +83,25 @@
 #define B2N_32(x) x = OSSwapBigToHostConstInt32(x)
 #define B2N_64(x) x = OSSwapBigToHostConstInt64(x)
 
+#elif defined(__MINGW32__)
+#define B2N_16(x)                               \
+  x = ((((x) & 0xff00) >> 8) |                  \
