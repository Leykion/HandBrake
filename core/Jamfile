    -I$(TOP)/contrib/libmp4v2
    -I$(TOP)/contrib/libmpeg2
    -I$(TOP)/contrib/libogg
    -I$(TOP)/contrib/libvorbis
    -I$(TOP)/contrib/libx264
    -I$(TOP)/contrib/libxvidcore
    -g -Wall ;

Library libhb.a : $(SOURCES_HBCORE) ;

